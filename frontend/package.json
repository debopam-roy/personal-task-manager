    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.3.3",
    "vite": "^6.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
